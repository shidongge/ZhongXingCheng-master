<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/mycolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/grzl_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@mipmap/fh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="#fff"
            android:textSize="18sp" />

        <View style="@style/xiantiao_zhongjian" />
        <TextView
            android:id="@+id/grzl_mbtn"
            android:text="保存"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View style="@style/xiantiao" />

    <LinearLayout style="@style/linear_tiaomu">

        <TextView
            style="@style/zhuti_text"
            android:text="头像" />

        <View style="@style/xiantiao_zhongjian" />

        <TextView
            style="@style/zhuti_text"
            android:text="未设置"

            />

        <ImageView style="@style/img_xiao" />
    </LinearLayout>

    <View style="@style/xiantiao" />

    <LinearLayout
        android:visibility="gone"
        style="@style/linear_tiaomu">

        <TextView
            style="@style/zhuti_text"
            android:text="我的二维码" />

        <View style="@style/xiantiao_zhongjian" />

        <ImageView style="@style/img_xiao" />
    </LinearLayout>

    <View style="@style/xiantiao" />

    <LinearLayout
        style="@style/linear_tiaomu"
        android:visibility="gone">

        <TextView
            style="@style/zhuti_text"
            android:text="背景图" />

        <View style="@style/xiantiao_zhongjian" />

        <TextView
            style="@style/zhuti_text"
            android:text="未设置"

            />

        <ImageView style="@style/img_xiao" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/grzl_ll_nc"
        style="@style/linear_tiaomu">

        <TextView
            style="@style/zhuti_text"
            android:text="昵称" />

        <View style="@style/xiantiao_zhongjian" />

        <TextView
            android:id="@+id/grzl_nc"
            style="@style/zhuti_text"


            />

        <ImageView style="@style/img_xiao" />
    </LinearLayout>

    <View style="@style/xiantiao" />




    <LinearLayout
        android:id="@+id/grzl_ll_qm"
        style="@style/linear_tiaomu"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView2"
            style="@style/zhuti_text"
            android:text="个性签名" />

        <View style="@style/xiantiao_zhongjian" />

        <TextView
            android:id="@+id/grzl_qianming"
            style="@style/zhuti_text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"


            />

        <ImageView style="@style/img_xiao" />
    </LinearLayout>

    <View
        style="@style/xiantiao"
        android:layout_height="10dp" />

    <LinearLayout
        android:visibility="gone"
        style="@style/linear_tiaomu"
        >

        <TextView
            style="@style/zhuti_text"
            android:text="星座" />

        <View style="@style/xiantiao_zhongjian" />

        <TextView
            android:id="@+id/grzl_xz"
            style="@style/zhuti_text"
            android:text="未设置"

            />

        <ImageView style="@style/img_xiao" />
    </LinearLayout>

    <View style="@style/xiantiao" />

    <LinearLayout
        android:id="@+id/grzl_ll_zhiye"
        style="@style/linear_tiaomu">

        <TextView
            style="@style/zhuti_text"
            android:text="职业" />

        <View style="@style/xiantiao_zhongjian" />

        <TextView
            android:id="@+id/grzl_zhiye"
            style="@style/zhuti_text"


            />

        <ImageView style="@style/img_xiao" />
    </LinearLayout>

    <View style="@style/xiantiao" />

    <LinearLayout style="@style/linear_tiaomu">

        <TextView
            style="@style/zhuti_text"
            android:text="收入" />

        <View style="@style/xiantiao_zhongjian" />

        <TextView
            android:id="@+id/grzl_shouru"
            style="@style/zhuti_text"
            android:layout_width="300dp"
            android:gravity="center"
            android:text="收入选择" />


    </LinearLayout>

    <View style="@style/xiantiao" />

    <LinearLayout
        android:id="@+id/grzl_ll_aihao"
        style="@style/linear_tiaomu">

        <TextView
            style="@style/zhuti_text"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:text="兴趣爱好" />

        <View style="@style/xiantiao_zhongjian" />

        <TextView
            android:id="@+id/grzl_aihao"
            style="@style/zhuti_text" />

        <ImageView style="@style/img_xiao" />
    </LinearLayout>

    <View style="@style/xiantiao" />



</LinearLayout>