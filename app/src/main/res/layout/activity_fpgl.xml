<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/mycolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fpgl_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@mipmap/fh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发票管理"
            android:textColor="#fff"
            android:textSize="18sp" />

        <View style="@style/xiantiao_zhongjian" />
        <TextView
            android:id="@+id/fpgl_xinzeng"
            android:text="新增"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/fpgl_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

        <ImageView
            android:visibility="gone"
            android:id="@+id/fpgl_wu"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/fpzt"
            />

    </RelativeLayout>


</LinearLayout>