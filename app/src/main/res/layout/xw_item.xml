<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="4"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/item_faxian_gonggao"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="重大公告"
                android:textSize="18sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/item_faxian_neirong"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="更多惊喜哈哈哈哈哈哈哈哈哈哈啊哈哈哈哈哈啊哈哈ah"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/item_faxian_guanfang"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height= "match_parent"
                    android:text="中星宝官方"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/item_faxian_yuedu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height= "match_parent"
                    android:text="好多人阅读"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_faxian_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/tx3"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>