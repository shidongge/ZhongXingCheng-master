<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--身份认证-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/mycolor"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/jbxx_wanshan_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@mipmap/fh" />

        <TextView
            style="@style/zhuti_text"
            android:text="身份认证"
            android:textColor="#fff" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:padding="2dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/jbzl" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="基本信息"
                    android:textColor="#333333"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                style="@style/xiantiao"
                android:layout_marginTop="10dp" />

            <LinearLayout style="@style/linear_tiaomu">

                <TextView
                    style="@style/zhuti_text"
                    android:text="国籍(地区)" />

                <View style="@style/xiantiao_zhongjian" />

                <TextView
                    style="@style/zhuti_text"
                    android:layout_marginRight="10dp"
                    android:text="中国大陆" />
            </LinearLayout>

            <View style="@style/xiantiao" />

            <LinearLayout style="@style/linear_tiaomu">

                <TextView

                    style="@style/zhuti_text"
                    android:text="姓名" />

                <View style="@style/xiantiao_zhongjian" />

                <TextView
                    android:id="@+id/jbxx_wanshan_name"
                    style="@style/zhuti_text"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:theme="@style/MyEditText" />

            </LinearLayout>

            <View style="@style/xiantiao"

                />

            <LinearLayout style="@style/linear_tiaomu">

                <TextView
                    style="@style/zhuti_text"
                    android:text="证件类型" />

                <View style="@style/xiantiao_zhongjian" />

                <TextView
                    style="@style/zhuti_text"
                    android:layout_marginRight="10dp"
                    android:text="身份证" />
            </LinearLayout>

            <View style="@style/xiantiao" />

            <View style="@style/xiantiao" />

            <LinearLayout style="@style/linear_tiaomu">

                <TextView
                    style="@style/zhuti_text"
                    android:text="证件号码" />

                <View style="@style/xiantiao_zhongjian" />

                <TextView
                    android:id="@+id/jbxx_wanshan_sfz"
                    style="@style/zhuti_text"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:theme="@style/MyEditText" />
            </LinearLayout>

            <View style="@style/xiantiao" />

            <View
                style="@style/xiantiao"
                android:layout_marginTop="10dp"

                />

            <LinearLayout style="@style/linear_tiaomu">

                <TextView
                    style="@style/zhuti_text"
                    android:text="性别" />

                <View style="@style/xiantiao_zhongjian" />

                <TextView
                    android:id="@+id/jbxx_wanshan_xingbie"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center" />
            </LinearLayout>

            <View style="@style/xiantiao"

                />

            <LinearLayout style="@style/linear_tiaomu">

                <TextView
                    style="@style/zhuti_text"
                    android:text="出生年月日" />

                <View style="@style/xiantiao_zhongjian" />

                <TextView
                    android:id="@+id/jbxx_wanshan_nianyueri"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center" />
            </LinearLayout>

            <View style="@style/xiantiao"

                />

            <LinearLayout style="@style/linear_tiaomu">

                <TextView
                    style="@style/zhuti_text"
                    android:text="身份证所属地区" />

                <View style="@style/xiantiao_zhongjian" />

                <TextView
                    android:id="@+id/jbxx_wanshan_ssdq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center" />
            </LinearLayout>

            <View style="@style/xiantiao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/zjzp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="证件照片"
                    android:textColor="#333333"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="拍摄您的二代身份证原件，请确保图片清晰，四角完整" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/zjzp_wanshan_zhengmian"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"

                    android:layout_weight="1"
                    android:src="@mipmap/sfzm" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/zjzp_wanshan_fanmian"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"

                    android:layout_weight="1"
                    android:src="@mipmap/sfzfm" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp" >

                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="身份证正面照"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="身份证正面照"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/scsfz" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="持照照片"
                    android:textColor="#333333"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="拍摄您的二代身份证原件，请确保图片清晰，四角完整" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/zjzp_chizhao_zhenmian"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"

                    android:layout_weight="1"
                    android:src="@mipmap/sczjzzm" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/zjzp_chizhao_fanmian"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"

                    android:layout_weight="1"
                    android:src="@mipmap/scsfzfm" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp" >

                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="持照正面照"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="持照反面照"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>