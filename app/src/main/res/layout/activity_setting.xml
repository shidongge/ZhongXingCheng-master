<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/mycolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sz_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@mipmap/fh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/home_setting_tab"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/bj"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shezhi_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/tx" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/idtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <LinearLayout
        android:visibility="gone"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@mipmap/xgnc" />

        <com.tencent.qcloud.ui.LineControllerView
            android:id="@+id/nickName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:canNav="true"
            app:name="@string/setting_nick_name_change" />
    </LinearLayout>

    <!--<com.tencent.qcloud.ui.LineControllerView-->
    <!--android:id="@+id/friendConfirm"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:canNav="true"-->
    <!--app:content="@string/setting_friend_need_confirm"-->
    <!--app:name="@string/setting_friend_confirm" />-->
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@mipmap/xxtx" />

        <com.tencent.qcloud.ui.LineControllerView
            android:id="@+id/messageNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:canNav="true"
            app:name="@string/setting_message_notify" />

    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@mipmap/hmd" />

        <com.tencent.qcloud.ui.LineControllerView
            android:id="@+id/blackList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:canNav="true"
            app:name="@string/setting_black_list" />
    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@mipmap/gy" />

        <TextView
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/setting_about" />
    </LinearLayout>

    <TextView
        android:id="@+id/logout"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/tuichu"
        android:gravity="center"
        android:text="@string/setting_logout"
        android:textColor="@color/text_btn"
        android:textSize="18sp" />

</LinearLayout>
