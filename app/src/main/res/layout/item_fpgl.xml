<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"

        >
        <ImageView
            android:id="@+id/fpgl_mr"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mr"
            />
        <TextView
            android:id="@+id/fpgl_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="中星宏宇(北京)科技有限公司"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fpgl_daima"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/fpgl_name"
            android:gravity="center"
            android:text="统一社会信用代码:9110101327129009T"
            android:textColor="#666666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/fpgl_daima"
            android:orientation="horizontal">

            <View style="@style/xiantiao_zhongjian" />

            <LinearLayout
                android:id="@+id/fpgl_bj"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shdzbj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="编辑"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/fpgl_sc"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shdzsc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="删除"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>