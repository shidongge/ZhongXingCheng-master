<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_shouye_shang_img"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item_shouye_xia_yi_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_shouye_xia_yi_ll_img"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@mipmap/tx" />

                <TextView

                    android:id="@+id/item_shouye_xia_yi_ll_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="hhahahhaahahahah" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_shouye_xia_er_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_shouye_xia_er_ll_img"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@mipmap/tx" />

                <TextView
                    android:id="@+id/item_shouye_xia_er_ll_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="hhahahhaahahahah" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_shouye_xia_san_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_shouye_xia_san_ll_img"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@mipmap/tx" />

                <TextView
                    android:id="@+id/item_shouye_xia_san_ll_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="hhahahhaahahahah" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>